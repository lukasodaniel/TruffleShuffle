<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet"/>
	<link rel="stylesheet" type="text/css" href="style.css">
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.js"></script>
	<script type="text/javascript" src="animation.js"></script>    
	<script src="http://connect.soundcloud.com/sdk.js"></script>
	<script type="text/javascript" src="thejspart.js"></script>
	<script type="text/javascript" src="RequestForm.js"></script>
	<script>
		function clearPage(){
			$("#submitRequest").html("Thank you! Your order is being processed.");
		}
	</script>
	<title>Truffle Shuffle</title>
  </head>
  <body>
		<div id="title">
			<h1><a href="/">Truffle Shuffle</a><br>
			<!--<i style="font-size:80%" class="fa fa-cutlery"></i><i class="fa fa-bicycle"></i><i class="fa fa-child"></i>-->
			</h1>		
		</div>
    <div class="container">
	  <div class="col-lg-12 col-md-12 col-sm-12 jumbotron" style="padding-top:2%; margin-right:0%;">
			<div class="row">
				<% if(locals.user){ %>
					<a href="/logout" class="btn btn-primary" style="margin-top:1.5%; margin-right: 0px; float: left;">Logout</a>
					<h3 id ="userGreeting"><i class="fa fa-user"></i>&nbsp;Hello, <%=user.givenName%>!</h3>
				<% } else{ %>  
					<a href="/login?" class="btn btn-primary" style="margin-bottom:2%; margin-right: 0px; float: right;">Login</a>
					<p><a href="/register" class="btn btn-primary" style="margin-bottom:2%; margin-right: 8px; float: right;">Register</a></p>
				<% } %>
			</div>
		<div class="row col-lg-12 col-md-12 col-sm-12" id="topbar">
		  <div class="topbar-content">
			<ul>
				<li><a href="/open_requests">Open Requests</a></li>
				<li><a href="/submit_request">Request Delivery</a></li>
				<li><a href="/track_request">Track Request</a></li>
				<li><a href="/restaurants">Restaurants' Info</a></li>
			</ul>
			</div>
		</div>
		<div class="row col-lg-12 col-md-12 col-sm-12">
		<div id ="submitRequest">
<form action="submitRequestForm" method="post" class="basic-grey">
    <h1>Order Form 
        <span>Please fill all the texts in the fields.</span>
    </h1>
	<label>
        <span>Order from :</span><select name="restaurantSelection">     
        </select>
    </label>  
	<label>
        <span>Order Details :</span>
        <textarea id="food" name="food" placeholder="eg. 1 Bacon Cheeseburger Medium Combo. Lemon in sweet tea, no pickles in burger. 1 Broccoli Cheese Baked Potato."></textarea>
    </label> 
	<label>
        <span>Deliver to :</span>
        <input id="address1" type="text" name="address1" placeholder="Address" />
		<span>&nbsp;&nbsp;&nbsp;&nbsp;</span><input id="address2" type="text" name="address2" placeholder="Building Name & Room Number" />
		<span>&nbsp;&nbsp;&nbsp;&nbsp;</span><input id="address3" type="text" name="address3" placeholder="City, State, Zip Code" />
    </label>
	<label>
        <span>Venmo Username :</span>
        <input id="venmo" type="text" name="venmo" placeholder="(If applicable)" />
    </label> 
	<label>
        <span>Method of Payment :</span><select name="selection">
        <option value="Cash">Cash</option>
        <option value="Venmo">Venmo</option>
        </select>
    </label>    
    <label>
        <span>Delivery Instructions :</span>
        <textarea id="message" name="message" placeholder="eg. Meet at building entrance. Please call when you get here."></textarea>
    </label> 
     <label>
        <span>&nbsp;</span> 
        <input type="submit" class="button" value="Send" onclick="clearPage()" /> 
    </label>    
</form>
		</div>
		</div>
      </div>
	  </div>
	  </div>
	</div>
    </div>
	<footer>
		<div class="row col-lg-12 col-md-12 col-sm-hidden" id="truffleShuffleBoy">
			<h1><i class="fa fa-hashtag"></i>UNCTruffleShuffle</h1>
		</div>
	</footer>
  </body>
</html>